{
  "name": "template-repo",
  "version": "1.0.0",
  "description": "Creating a template repository",
  "main": "index.js",
  "scripts": {
    "prestart": "npm run clean",
    "prebuild": "npm run clean",
    "clean": "rimraf dist",
    "lint": "run-s lint:html lint:css lint:js",
    "lint:js": "eslint . --ext .js",
    "prelint:html": "npm run build",
    "lint:html": "pa11y-ci -c .pa11yci.json \"./dist/**/*.html\"",
    "lint:css": "stylelint \"src/scss/**/*.scss\" --color --formatter verbose",
    "start": "run-p eleventy:dev sass:dev js:dev",
    "build": "run-s eleventy:build sass:build js:build",
    "eleventy:dev": "eleventy --serve",
    "eleventy:build": "eleventy",
    "sass": "sass src/scss:dist",
    "sass:dev": "sass --watch --embed-source-map src/scss:dist",
    "sass:build": "sass --no-source-map --style=compressed src/scss:dist",
    "js:dev": "esbuild src/js/*.js --format=esm --bundle=true --splitting=true --outdir=dist --watch --sourcemap=inline",
    "js:build": "esbuild src/js/*.js --format=esm --bundle=true --splitting=true --outdir=dist --minify=true",
    "test": "jest --transformIgnorePatterns \"[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$\"",
    "type": "module"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.2",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-airbnb": "^19.0.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.0.1",
    "prettier": "3.0.3",
    "rimraf": "^5.0.5",
    "stylelint": "^15.10.3",
    "stylelint-config-standard-scss": "^11.0.0"
  },
  "dependencies": {
    "sass": "^1.69.2"
  }
}
